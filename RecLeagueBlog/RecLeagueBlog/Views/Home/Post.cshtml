@model RecLeagueBlog.Models.BlogPost
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_BlankPage.cshtml";
}

<div class="container">
    <div class="row">
        <!-- Blog Post Content Column -->
        <div class="col-xs-12">
            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Title</h1>
            <!-- Author -->
            <p class="lead">
                by @Model.UserName
            </p>
            <hr>
            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.DateCreated.ToString("MM/dd/yyyy")</p>
            <hr>
            <!-- Post Content -->
            <p class="lead">@Model.Content</p>
            <hr>
        </div>
    </div>
</div>