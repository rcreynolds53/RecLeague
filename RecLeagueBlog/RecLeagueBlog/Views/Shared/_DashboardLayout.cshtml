<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>
        Rec League Sports
        @ViewBag.Title
    </title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/jquery.tagsinput.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/trix.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/metisMenu.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/sb-admin-2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">Rec League Sports</a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("UserProfile", "Dashboard")"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li class="divider"></li>
						<li>
							<a href="@Url.Action("UpdatePassword", "Dashboard")"><i class="fa fa-lock fa-fw"></i>Update Password</a>
						</li>
						<li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Logout", "Auth")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <li>
                                <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-rebel fa-fw"></i> Dashboard</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Posts", "Dashboard")"><i class="fa fa-edit fa-fw"></i> Posts</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Pages", "Dashboard")"><i class="fa fa-file-code-o fa-fw"></i> Pages</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Categories", "Dashboard")"><i class="fa fa-filter fa-fw"></i> Categories</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Tags", "Dashboard")"><i class="fa fa-tags fa-fw"></i> Tags</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Users", "Dashboard")"><i class="fa fa-users fa-fw"></i> Users</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-rebel fa-fw"></i> Dashboard</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Posts", "Dashboard")"><i class="fa fa-edit fa-fw"></i> Posts</a>
                            </li>
                        }

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="@Url.Content("~/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/js/sb-admin-2.js")"></script>
    @RenderSection("scripts", false)
</body>
</html>
