@model IEnumerable<RecLeagueBlog.Models.BlogPost>
@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class=" row">
        <h3>Blog Posts</h3>
        <div class="col-xs-2">
            <div class="form-group">
                <button class="btn btn-default btn-lg" type="button" id="createPostBtn">Create Post</button>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <input type="text" class="input-lg form-control" id="searchTerm" onkeyup= "searchFilter();" placeholder="Search Term">
            </div>
        </div>
        <div class="col-sm-offset-1 col-xs-1">
            <div class="form-group">
                <button class="btn btn-default btn-lg" type="button" id="searchBtn">Search</button>
            </div>
        </div>
