@model RecLeagueBlog.Models.ResetPasswordModel

@{
	ViewBag.Title = "ResetPassword";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}


<div class="row">
	<div class="col-lg-12">

		<h1>Reset Password</h1>
		<hr />
		@using (Html.BeginForm("ResetPassword", "Dashboard", FormMethod.Post))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group">
						<label>Email Address</label>
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>New Password</label>
						@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
					</div>
					<button class="btn btn-primary">Reset Password</button>
				</div>
			</div>
			<br />
			<br />
			<br />
			<div>
				@if (TempData["PasswordReset"] != null)
				{
					<div class="col-xs-6">
						<p class="alert alert-success text-center" id="successMessage">
							@TempData["PasswordReset"]
						</p>
					</div>
				}
			</div>
		}
	</div>
</div>
