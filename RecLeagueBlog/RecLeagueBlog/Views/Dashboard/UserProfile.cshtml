@model RecLeagueBlog.Models.ResetPasswordModel

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>@ViewBag.Title.</h2>
        <h3>@ViewBag.Message</h3>

        <p>Use this area to do blog post crud.</p>

		<hr />
		<h3>Reset Password</h3>
		@using (Html.BeginForm("ResetPassword", "Dashboard", FormMethod.Post))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group">
						<label>Email Address</label>
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					</div>
					<button class="btn btn-primary">Reset Password</button>
				</div>
			</div>
			<div>
				@if (TempData["Error"] != null)
				{
					<div class="col-xs-6 panel-red">
						<p class="alert alert-danger text-center" id="errorMessage">
							@TempData["Error"]
						</p>
					</div>
				}
				@if (TempData["PasswordReset"] != null)
				{
					<div class="col-xs-6">
						<p class="alert alert-success text-center" id="successMessage">
						@TempData["PasswordReset"]</p>
					</div>
				}
			</div>
		}
    </div>
</div>



