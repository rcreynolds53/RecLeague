@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser
@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Delete User</h2>
        @Html.ActionLink("Return to Users", "Users", "Dashboard")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("DeleteUser", "Dashboard", FormMethod.Post))
        {
            @Html.HiddenFor(u => u.Id)
            <p>Are you sure that you wish to delete this user: @Html.DisplayFor(u => u.UserName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Users", "Dashboard", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>  