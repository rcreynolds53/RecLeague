@model RecLeagueBlog.Models.UpdatePasswordModel
@{
	ViewBag.Title = "UpdatePassword";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<h1 class="text-center">Update Password</h1>
		@using (Html.BeginForm("UpdatePassword", "Dashboard", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
		{
			<hr />
			<br />
			<table>
				<tr>
					<td>
						<label asp-for="Password">
							New Password
						</label>
					</td>
					<td><input asp-for="Password" /></td>
				</tr>
				<tr>
					<td>
						<label asp-for="ConfirmPassword">
							Confirm New Password
						</label>
					</td>
					<td><input asp-for="ConfirmPassword" /></td>
				</tr>
				<tr>
					<td colspan="2">
						<input type="submit"
							   value="Update Password" />
					</td>
				</tr>
			</table>
		}
	</div>
</div>