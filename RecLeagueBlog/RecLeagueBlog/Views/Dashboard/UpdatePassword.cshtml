@model RecLeagueBlog.Models.UpdatePasswordModel
@{
	ViewBag.Title = "UpdatePassword";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
	<div class="col-lg-6">
		<h1 class="text-center">Update Password</h1>
		@using (Html.BeginForm("UpdatePassword", "Dashboard", FormMethod.Post))
		{
			@Html.ValidationSummary(true)
			<div class="form-group">
				<label>New Password</label>
				@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label>Confirm Password</label>
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.ConfirmPassword)
			</div>
			<button class="btn btn-primary">Update Password</button>
			<div>
				@if (TempData["PasswordUpdate"] != null)
				{
					<div>
						<p class="alert alert-success text-center" id="successMessage">
							@TempData["PasswordUpdate"]
						</p>
					</div>
				}
			</div>
		}
	</div>
</div>