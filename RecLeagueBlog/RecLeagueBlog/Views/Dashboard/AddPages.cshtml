@model RecLeagueBlog.Models.StaticPageViewModel
@{
    ViewBag.Title = "AddPages";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Add Page</h1>
        <hr />
    </div>
</div>
<div class="col-md-12">
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Page Details</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Page Title:</label>
                            @Html.TextBoxFor(m => m.StaticPage.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.StaticPage.Title)
                        </div>
                        <div class="form-group">
                            <label>Page Content:</label>
                            @Html.TextBoxFor(m => m.StaticPage.Content, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.StaticPage.Content)
                        </div>
                        <div class="form-group">
                            <label>Status:</label>
                            @Html.DropDownListFor(m => m.StaticPage.Status.StatusId, Model.StatusItems, "-Choose One-", new { @class = "form-control" })
                        </div>
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>