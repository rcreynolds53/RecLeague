@model RecLeagueBlog.Models.StaticPage
@{
    ViewBag.Title = "DeletePagse";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Delete Page</h1>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("DeletePages", "Dashboard", FormMethod.Post))
        {
            @Html.HiddenFor(m=>m.StaticPageId)
            <p>Are you sure that you wish to delete this page: @Html.DisplayFor(m=>m.Title)</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Pages", "Dashboard", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div> 