
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="container">
    <div class=" row">
        <h3>Categories</h3>
        <div class="col-xs-2">
            <div class="form-group">
                <button class="btn btn-default btn-lg" type="button" id="createCategoryBtn">Create Category</button>
            </div>
        </div>
        <div class="col-sm-offset-1 col-xs-1">
            <div class="form-group">
                <button class="btn btn-default btn-lg" type="button" id="search-button">Search</button>
            </div>
        </div>
        <div class="dropdown col-xs-3">
            <div class="col-xs-3">
                <button class="btn btn-primary dropdown-toggle btn-lg" type="button" data-toggle="dropdown">
                    Category Search
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="#">Action</a>
                    </li>
                    <li>
                        <a href="#">Chick Flick</a>
                    </li>
                    <li>
                        <a href="#">Comedy</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-xs-5">
            <div class="form-group">
                <input type="text" class="input-lg form-control" id="search-by-term" placeholder="Search Term">
            </div>
        </div>
    </div>
</div>
<hr>
<div class="container">
    <ul class="list-group" id="errorMessages"></ul>
    <div id="categoryTableDiv" class="col-xs-12">
        <table id="postsTable" class="table table-striped table-bordered">
            <tr>
                <th width="50%">Category</th>
                <th width="50%"></th>
            </tr>
            <tbody id="contentRows"></tbody>
        </table>
    </div>
</div>
<div class="container" id="addCategoryDiv" style="display: none">
    <div class="col-xs-9">
        <h2 class="newPost">Create Category</h2>
        <form class="form-horizontal" role="form" id="addCategoryForm">
            <div class="form-group">
                <label for="addCategory" class="col-xs-12 control-label">Category:</label>
                <div class="col-xs-12">
                    <input type="text" class="form-control" id="addCategory" placeholder="Category" required>
                </div>
            </div>
            <div class="col-md-offset-4 col-md-2">
                <input type="hidden" id="add-movie-id">
                <button id="addCategoryCancelBtn" class="btn btn-danger" onclick="hideAddCategory()">
                    Cancel
                </button>
            </div>
            <div class="col-md-2">
                <button type="button" id="addCategoryBtn" class="btn btn-primary">
                    Save Category
                </button>
            </div>
        </form>
    </div>
</div>
<div class="container" id="editCategoryDiv" style="display: none">
    <h2>Edit Category</h2>
    <form class="form-horizontal" role="form" id="editCategoryForm">
        <input type="hidden" id="categoryId" />
        <div class="form-group">
            <label for="editCategory" class="col-md-2 control-label">Category:</label>
            <div class="col-md-8">
                <input type="text" class="form-control" id="editCategory" placeholder="Category">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="hidden" id="edit-movie-id">
                <button type="submit" id="editCategoryCancelBtn" class="btn btn-danger" onclick="hideEditPostForm()">
                    Cancel Edit
                </button>
            </div>
            <div class="col-md-2">
                <button type="button" id="editCategoryBtn" class="btn btn-primary">
                    Update Category
                </button>
            </div>
        </div>
    </form>
</div>
<script src="~/Scripts/homeCategories.js"></script>